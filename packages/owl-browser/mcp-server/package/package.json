{
  "name": "@olib-ai/owl-browser-mcp",
  "version": "2.0.0",
  "description": "MCP server for Owl Browser HTTP API - 157 browser automation tools with anti-detection",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "owl-browser-mcp": "dist/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "browser-automation",
    "owl-browser",
    "claude",
    "ai-tools"
  ],
  "author": "Olib AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Olib-AI/owl-browser-mcp"
  },
  "homepage": "https://github.com/Olib-AI/owl-browser-mcp#readme",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --format=esm --loader:.json=json && node -e \"const fs=require('fs');const f='dist/index.js';fs.writeFileSync(f,'#!/usr/bin/env node\\n'+fs.readFileSync(f))\"",
    "build:cjs": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.cjs --format=cjs --loader:.json=json && node -e \"const fs=require('fs');const f='dist/index.cjs';fs.writeFileSync(f,'#!/usr/bin/env node\\n'+fs.readFileSync(f))\"",
    "dev": "tsx src/index.ts",
    "test": "node --test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist"
  ]
}
