# ==============================================================================
# Owl Browser License Server - Local Development Configuration
# ==============================================================================
# This configuration is for LOCAL development and testing only.
# All URLs point to localhost - NO external owlbrowser.net dependencies.
# ==============================================================================

# ==============================================================================
# Database Configuration
# ==============================================================================
# SQLite for simple local dev (no Docker needed):
# OLIB_DB_TYPE=sqlite

# PostgreSQL for Docker deployment (recommended):
OLIB_DB_TYPE=postgresql
OLIB_DB_HOST=localhost
OLIB_DB_PORT=5432
OLIB_DB_NAME=olib_licenses
OLIB_DB_USER=olib
OLIB_DB_PASSWORD=olib_dev_2024

# ==============================================================================
# Admin Server Configuration
# ==============================================================================
OLIB_ADMIN_PORT=3035
OLIB_ADMIN_HOST=0.0.0.0
OLIB_ADMIN_USERNAME=admin

# Flask secret key for session management
# Generated with: python -c "import secrets; print(secrets.token_hex(32))"
OLIB_ADMIN_SECRET_KEY=69c55c5d390d56c99bd4200473bcff99b0d163d8bda38fdd3cfa6f78ca9b5226

# ==============================================================================
# License API Server Configuration
# ==============================================================================
# License server URL for local development (used by browser)
OLIB_LICENSE_SERVER_URL=http://localhost:3034
OLIB_LICENSE_SERVER_HOST=0.0.0.0
OLIB_LICENSE_SERVER_PORT=3034

# HMAC secret for nonce authentication
# IMPORTANT: This MUST match the OWL_NONCE_HMAC_SECRET used when building the browser
OWL_NONCE_HMAC_SECRET=39ba468791c375913c4e9bd3c9a6999d4e4b85c3cf87c2264bba73bcdfaebc37

# ==============================================================================
# Session Configuration
# ==============================================================================
SESSION_LIFETIME_HOURS=168
NONCE_TIMESTAMP_TOLERANCE=300

# ==============================================================================
# Key Management
# ==============================================================================
# Auto-generate RSA keys on first start (for development only!)
GENERATE_KEYS=true

# ==============================================================================
# Development Mode - Bypass Strict License Validation
# ==============================================================================
# These flags enable dev mode for easier local testing
DEV_LICENSE_MODE=true

# Allow any hardware fingerprint (don't enforce hardware binding)
ALLOW_ANY_FINGERPRINT=true

# Skip signature verification for dev licenses
DEV_SKIP_SIGNATURE_CHECK=true
